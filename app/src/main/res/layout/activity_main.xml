<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    style="@style/layout_style">
    <TextView
        android:id="@id/screen"
        style="@style/screen_style" />
    <LinearLayout
        style="@style/numpad_style">
        <LinearLayout
            style="@style/numpad_row_style">
            <TextView
                style="@style/unary_op_button_style"
                android:text="@string/open_bracket" />
            <TextView
                style="@style/unary_op_button_style"
                android:text="@string/close_bracket" />
            <TextView
                style="@style/del_button_style"
                android:text="@string/clear"
                android:onClick="clear"/>
            <TextView
                style="@style/del_button_style"
                android:text="@string/backspace"
                android:onClick="backspace"/>
        </LinearLayout>
        <LinearLayout
            style="@style/numpad_row_style">
            <TextView
                style="@style/unary_op_button_style"
                android:text="@string/percent" />
            <TextView
                style="@style/unary_op_button_style"
                android:text="@string/square_root"/>
            <TextView
                style="@style/unary_op_button_style"
                android:text="@string/pow"/>
            <TextView
                style="@style/op_button_style"
                android:text="@string/division"/>
        </LinearLayout>
        <LinearLayout
            style="@style/numpad_row_style">
            <TextView
                style="@style/num_button_style"
                android:text="@string/seven"/>
            <TextView
                style="@style/num_button_style"
                android:text="@string/eight"/>
            <TextView
                style="@style/num_button_style"
                android:text="@string/nine"/>
            <TextView
                style="@style/op_button_style"
                android:text="@string/multiplication"/>
        </LinearLayout>
        <LinearLayout
            style="@style/numpad_row_style">
            <TextView
                style="@style/num_button_style"
                android:text="@string/four"/>
            <TextView
                style="@style/num_button_style"
                android:text="@string/five"/>
            <TextView
                style="@style/num_button_style"
                android:text="@string/six"/>
            <TextView
                style="@style/op_button_style"
                android:text="@string/addition"/>
        </LinearLayout>
        <LinearLayout
            style="@style/numpad_row_style">
            <TextView
                style="@style/num_button_style"
                android:text="@string/one"/>
            <TextView
                style="@style/num_button_style"
                android:text="@string/two"/>
            <TextView
                style="@style/num_button_style"
                android:text="@string/three"/>
            <TextView
                style="@style/op_button_style"
                android:text="@string/subtraction"/>
        </LinearLayout>
        <LinearLayout
            style="@style/numpad_row_style">
            <TextView
                style="@style/num_button_style"
                android:layout_weight="2"
                android:text="@string/zero"/>
            <TextView
                style="@style/num_button_style"
                android:text="@string/point"/>
            <TextView
                style="@style/op_button_style"
                android:text="@string/execute"
                android:onClick="execute"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>