<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">8</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="screen_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:textSize">50sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="numpad_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">6</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="numpad_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:onClick">input</item>
    </style>
    <style name="num_button_style" parent="button_style">
        <item name="android:backgroundTint">@color/lightDark</item>
    </style>
    <style name="del_button_style" parent="button_style">
        <item name="android:backgroundTint">@color/red</item>
    </style>
    <style name="op_button_style" parent="button_style">
        <item name="android:backgroundTint">@color/orange</item>
    </style>
    <style name="unary_op_button_style" parent="button_style">
        <item name="android:backgroundTint">@color/light</item>
    </style>
</resources>